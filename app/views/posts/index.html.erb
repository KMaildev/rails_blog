<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p style="color: green"><%= notice %></p>
      <%= link_to "New post", new_post_path, class:"btn btn-success" %>

      <div id="posts" class="py-4">
        <% @posts.each do |post| %>
          <%= render post %>
          <%= link_to "Show this post", post, class:"btn btn-success" %>
          <%= link_to "Edit this post", edit_post_path(post), class:"btn btn-success" %>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
